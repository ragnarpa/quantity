    "sourceType": "module",
    "ecmaVersion": 2016
  },
  "plugins": ["@typescript-eslint", "jest", "jest-formatting"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:jest/all",
    "plugin:jest/style",
    "plugin:jest-formatting/strict"
  ]
}
